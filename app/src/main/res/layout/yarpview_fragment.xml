<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/action_open_port"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:id="@+id/btnInitNative"
        android:background="@color/button_color_2"
        android:elevation="16dp"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingRight="20dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btnFiniNative" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/action_close_port"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:id="@+id/btnFiniNative"
        android:background="@color/button_color_2"
        android:elevation="16dp"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingRight="20dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/btnInitNative"
        android:layout_toRightOf="@+id/imgLeft"
        android:layout_alignParentRight="true" />
</RelativeLayout>