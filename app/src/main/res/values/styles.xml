<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/actionbar_background</item>
        <item name="tabIndicatorColor">@color/tablayout_accent</item>
        <item name="tabTextAppearance">@style/MyTextAppearance</item>m>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/tab_color_highlight</item>
    </style>
</resources>